{% extends 'base.html.twig' %}

{% block title %}Airports List{% endblock %}

{% block body %}
<div class="container mt-5 d-flex flex-column align-items-center">
    <h1 class="mb-4">Airports List</h1>

    <div class="mb-3">
        <a href="{{ path('aeroport_new') }}" class="btn btn-success">+ Add Airport</a>
    </div>

    <div class="table-responsive" style="width: 70%;">
        <table class="table table-bordered table-striped table-hover text-center align-middle">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>City</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for aeroport in aeroports %}
                    <tr>
                        <td>{{ aeroport.id }}</td>
                        <td>{{ aeroport.nom }}</td>
                        <td>{{ aeroport.ville }}</td>
                        <td>
                            <a href="{{ path('aeroport_edit', { id: aeroport.id }) }}" 
                               class="btn btn-primary btn-sm">
                                Edit
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">No airports found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
